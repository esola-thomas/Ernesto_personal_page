---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import type { CollectionEntry } from "astro:content";

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  siteMeta?: CollectionEntry<"site">;
  locale?: string;
}

const {
  title = "Ernesto Sola-Thomas â€¢ Electrical & Computer Engineer",
  description = "Silicon engineer and founder shaping dependable, human-centered technology across chips, cloud, and emerging ventures.",
  ogImage = `${Astro.site}og-default.svg`,
  siteMeta,
  locale = "en"
} = Astro.props as Props;
---
<!DOCTYPE html>
<html lang={locale} class="dark scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="Ernesto Sola-Thomas" />
    <meta name="keywords" content="Ernesto Sola-Thomas, silicon verification engineer, electrical engineer, computer engineer, AI silicon, Microsoft, hardware verification, SystemVerilog, FPGA, blockchain, post-quantum cryptography" />
    <meta name="theme-color" content="#FF4F00" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#00FF7F" media="(prefers-color-scheme: dark)" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Hreflang tags for multi-language support -->
    <link rel="alternate" hreflang="en" href={`${Astro.site}`} />
    <link rel="alternate" hreflang="es" href={`${Astro.site}es/`} />
    <link rel="alternate" hreflang="x-default" href={`${Astro.site}`} />

    <title>{title}</title>

    <!-- Favicon - Multiple formats for better browser support -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Ernesto Sola-Thomas" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url.href} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <script type="application/ld+json" set:html={`
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebSite",
            "url": "${Astro.site}",
            "name": "${title}",
            "description": "${description}",
            "inLanguage": ["en", "es"],
            "publisher": {
              "@id": "${Astro.site}#person"
            }
          },
          {
            "@type": "Person",
            "@id": "${Astro.site}#person",
            "name": "${siteMeta.data.hero.name}",
            "jobTitle": "${siteMeta.data.hero.title}",
            "url": "${Astro.site}",
            "email": "${siteMeta.data.contact.email}",
            "sameAs": [
              "https://github.com/esola-thomas",
              "https://www.linkedin.com/in/ernesto-sola-thomas"
            ],
            "knowsAbout": [
              "Silicon Verification",
              "Hardware Verification",
              "SystemVerilog",
              "FPGA Development",
              "AI",
              "Huitzo",
              "AI Accelerators",
              "Blockchain Technology",
              "Post-Quantum Cryptography",
              "Cloud Architecture",
              "Kubernetes",
              "Python",
              "Embedded Systems"
            ],
            "alumniOf": {
              "@type": "EducationalOrganization",
              "name": "Clarkson University",
              "address": {
                "@type": "PostalAddress",
                "addressLocality": "Potsdam",
                "addressRegion": "NY"
              }
            },
            "worksFor": {
              "@type": "Organization",
              "name": "Microsoft"
            },
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "${siteMeta.data.contact.location.split(',')[0].trim()}",
              "addressRegion": "${siteMeta.data.contact.location.split(',')[1].trim()}"
            }
          },
          {
            "@type": "BreadcrumbList",
            "itemListElement": [
              {
                "@type": "ListItem",
                "position": 1,
                "name": "Home",
                "item": "${Astro.site}"
              },
              {
                "@type": "ListItem",
                "position": 2,
                "name": "About",
                "item": "${Astro.site}#about"
              },
              {
                "@type": "ListItem",
                "position": 3,
                "name": "Experience",
                "item": "${Astro.site}#experience"
              },
              {
                "@type": "ListItem",
                "position": 4,
                "name": "Ventures",
                "item": "${Astro.site}#ventures"
              },
              {
                "@type": "ListItem",
                "position": 5,
                "name": "Projects",
                "item": "${Astro.site}#projects"
              },
              {
                "@type": "ListItem",
                "position": 6,
                "name": "Skills",
                "item": "${Astro.site}#skills"
              },
              {
                "@type": "ListItem",
                "position": 7,
                "name": "Contact",
                "item": "${Astro.site}#contact"
              }
            ]
          },
          {
            "@type": "Organization",
            "@id": "${Astro.site}#sola-thomas-solutions",
            "name": "Sola-Thomas Solutions LLC",
            "founder": {
              "@id": "${Astro.site}#person"
            },
            "foundingDate": "2025",
            "description": "Consulting studio accelerating hardware-software prototypes, analytics platforms, and cloud automation",
            "knowsAbout": [
              "Technology Consulting",
              "Web Development",
              "Networking Infrastructure",
              "Security Systems",
              "Small Business IT Support"
            ]
          },
          {
            "@type": "Organization",
            "@id": "${Astro.site}#knowonomy",
            "name": "Knowonomy",
            "alternateName": "Knowa",
            "founder": {
              "@id": "${Astro.site}#person"
            },
            "foundingDate": "2025",
            "description": "Marketplace for actionable knowledge where creators, learners, and brand partners collaborate on outcome-driven content",
            "knowsAbout": [
              "Education Technology",
              "Knowledge Management",
              "Online Learning",
              "Content Marketing"
            ]
          },
          {
            "@type": "Organization",
            "@id": "${Astro.site}#findmily",
            "name": "Findmily",
            "founder": {
              "@id": "${Astro.site}#person"
            },
            "foundingDate": "2023",
            "description": "Family coordination and scheduling platform connecting busy families through shared calendars and location services",
            "knowsAbout": [
              "Family Organization",
              "Mobile Applications",
              "Calendar Management",
              "Location Services"
            ]
          },
          {
            "@type": "Organization",
            "@id": "${Astro.site}#huitzo",
            "name": "Huitzo",
            "founder": {
              "@id": "${Astro.site}#person"
            },
            "foundingDate": "2024",
            "description": "Web development CLI tooling for modern full-stack applications with integrated testing and deployment pipelines",
            "knowsAbout": [
              "Web Development",
              "CLI Tools",
              "Developer Tools",
              "Full-Stack Development"
            ]
          }
        ]
      }
    `}></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <script is:inline>
      (function () {
        try {
          const theme = window.localStorage.getItem("theme");
          if (theme === "light") {
            document.documentElement.classList.remove("dark");
          } else {
            document.documentElement.classList.add("dark");
          }
        } catch (err) {
          console.warn("Theme preference unavailable", err);
        }
      })();
    </script>

    <script data-goatcounter="https://ernessola.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
  </head>
  <body class="flex min-h-dvh flex-col">
    <Header locale={locale} />
    <main id="main" class="flex-1">
      <slot />
    </main>
    <Footer locale={locale} />
    <script type="module" src="/theme-toggle.js" defer></script>
  </body>
</html>
