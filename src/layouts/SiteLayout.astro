---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import type { CollectionEntry } from "astro:content";

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  siteMeta?: CollectionEntry<"site">;
  locale?: string;
}

const {
  title = "Ernesto Sola-Thomas â€¢ Electrical & Computer Engineer",
  description = "Silicon engineer and founder shaping dependable, human-centered technology across chips, cloud, and emerging ventures.",
  ogImage = "https://tse1.mm.bing.net/th/id/OIP.hPYSzHHEbkC3WzghsU_xjAHaHa?rs=1&pid=ImgDetMain&o=7&rm=3",
  siteMeta,
  locale = "en"
} = Astro.props as Props;
---
<!DOCTYPE html>
<html lang={locale} class="dark scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={Astro.url.href} />
    <title>{title}</title>
    <link rel="icon" href="https://tse1.mm.bing.net/th/id/OIP.hPYSzHHEbkC3WzghsU_xjAHaHa?rs=1&pid=ImgDetMain&o=7&rm=3" type="image/jpeg">

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="Ernesto Sola-Thomas" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={Astro.url.href} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <script type="application/ld+json" set:html={`
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebSite",
            "url": "${Astro.site}",
            "name": "${title}",
            "description": "${description}",
            "publisher": {
              "@id": "${Astro.site}#person"
            }
          },
          {
            "@type": "Person",
            "@id": "${Astro.site}#person",
            "name": "${siteMeta.data.hero.name}",
            "jobTitle": "${siteMeta.data.hero.title}",
            "url": "${Astro.site}",
            "email": "${siteMeta.data.contact.email}",
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "${siteMeta.data.contact.location.split(',')[0].trim()}",
              "addressRegion": "${siteMeta.data.contact.location.split(',')[1].trim()}"
            }
          }
        ]
      }
    `}></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <script is:inline>
      (function () {
        try {
          const theme = window.localStorage.getItem("theme");
          if (theme === "light") {
            document.documentElement.classList.remove("dark");
          } else {
            document.documentElement.classList.add("dark");
          }
        } catch (err) {
          console.warn("Theme preference unavailable", err);
        }
      })();
    </script>

    <script data-goatcounter="https://ernessola.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
  </head>
  <body class="flex min-h-dvh flex-col">
    <Header locale={locale} />
    <main id="main" class="flex-1">
      <slot />
    </main>
    <Footer locale={locale} />
    <script type="module" src="/theme-toggle.js" defer></script>
  </body>
</html>
