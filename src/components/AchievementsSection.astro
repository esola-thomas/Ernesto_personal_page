---
interface Achievement {
  title: string;
  description: string;
}

const { achievements }: { achievements: Achievement[] } = Astro.props;
---
<section id="achievements" class="py-24">
  <div class="container section-grid">
    <div class="section-heading">
      <span class="eyebrow">Highlights</span>
      <h2>Achievements & Focus Areas</h2>
      <p class="max-w-2xl text-base text-muted">
        A snapshot of how engineering, research, and entrepreneurship intersect across my work.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-4">
      {achievements.map((item) => (
        <article class="glass-panel h-full p-6" key={item.title}>
          <h3 class="font-display text-xl text-primary">{item.title}</h3>
          <p class="mt-3 text-sm text-muted">{item.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
