---
import { getTranslations, type Locale } from "../i18n/translations";

interface Achievement {
  title: string;
  description: string;
}

interface Props {
  achievements: Achievement[];
  locale?: Locale;
}

const { achievements, locale = 'en' } = Astro.props;
const t = getTranslations(locale);
---
<section id="achievements" class="py-24">
  <div class="container section-grid">
    <div class="section-heading">
      <span class="eyebrow">{t.headings.achievementsEyebrow}</span>
      <h2>{t.headings.achievements}</h2>
      <p class="max-w-2xl text-base text-muted">
        {t.headings.achievementsDesc}
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-4 xl:grid-flow-dense">
      {achievements.map((item, index) => (
        <article
          class:list={[
            "bento-card h-full p-6",
            { "xl:col-span-2 xl:row-span-2": index === 0 },
          ]}
          key={item.title}
        >
          <h3 class="font-display text-xl text-primary">{item.title}</h3>
          <p class="mt-3 text-sm text-muted">{item.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>
