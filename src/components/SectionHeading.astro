---
export interface Props {
  eyebrow: string;
  title: string;
  description?: string;
}

const { eyebrow, title, description } = Astro.props;
---
<div class="section-heading">
  <span class="eyebrow">{eyebrow}</span>
  <h2>{title}</h2>
  {description && <p class="max-w-2xl text-base text-muted">{description}</p>}
</div>
