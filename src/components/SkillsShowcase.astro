---
import { getTranslations, type Locale } from "../i18n/translations";

interface SkillGroup {
  label: string;
  items: string[];
}

interface Props {
  groups: SkillGroup[];
  locale?: Locale;
}

const { groups, locale = 'en' } = Astro.props;
const t = getTranslations(locale);
---
<section id="skills" class="py-24">
  <div class="container section-grid">
    <div class="section-heading">
      <span class="eyebrow">{t.headings.skillsEyebrow}</span>
      <h2>{t.headings.skills}</h2>
      <p class="max-w-2xl text-base text-muted">
        {t.headings.skillsDesc}
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
      {groups.map((group) => (
        <article class="glass-panel p-8" key={group.label}>
          <h3 class="font-display text-xl text-primary">{group.label}</h3>
          <ul class="mt-6 flex flex-wrap gap-2">
            {group.items.map((item) => (
              <li class="tag" key={`${group.label}-${item}`}>{item}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
